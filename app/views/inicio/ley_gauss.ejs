<script type="text/javascript">
       function hablar(message) {
        var speech = new SpeechSynthesisUtterance();
        // Set the text and voice attributes.
        speech.text = message;
        speech.volume = 1;
        speech.rate = 0.9;
        speech.pitch = 1;
        speech.lang='es-ES';
        window.speechSynthesis.speak(speech);
      }
       $('#btnCarga').on('click', function() {
        window.location.href='/';
      });
       $('#btnGauss').on('click', function() {
        window.location.href='/ley_de_gauss';
      });
       $('#btnPotencial').on('click', function() {
        window.location.href ='/potencial';
      });
       $('#btnCapacitancia').on('click', function() {
        window.location.href ='/capacitancia';
      });
       function Calcular(){
        var Epsilon= 8.85*(Math.pow(10, Number(-12)));
        var Q=document.getElementById('txtQ').value;
        var r=document.getElementById('txtr').value;
        var E=document.getElementById('txtE').value;
       
        if((Q.indexOf('e')!=-1) || (Q.indexOf('x10^')!=-1)){
            Q=Q.replace('x10^','^');
            var separador = Q.split(/[e^]/);
            Q=Number(separador[0])*(Math.pow(10, Number(separador[1])));
        }
        if((r.indexOf('e')!=-1) || (r.indexOf('x10^')!=-1)){
            r=r.replace('x10^','^');
            var separador = r.split(/[e^]/);
            r=Number(separador[0])*(Math.pow(10, Number(separador[1])));
        }
        if((E.indexOf('e')!=-1) || (E.indexOf('x10^')!=-1)){
            E=E.replace('x10^','^');
            var separador = E.split(/[e^]/);
            E=Number(separador[0])*(Math.pow(10, Number(separador[1])));
        }
        if(E==0){
            E=Q/((Epsilon*4*Math.PI)*(Math.pow(r,2)));
            var Es=(Number(E)).toPrecision(4); Es=Es.replace('e','x10^');
            document.getElementById('txtE').value=Es;
        }
        if(Q==0){
            Q=E*(Epsilon*4*Math.PI)*(Math.pow(r,2));
            var Qs=(Number(Q)).toPrecision(4); Qs=Qs.replace('e','x10^');
            document.getElementById('txtQ').value=Qs;
        }
        if(r==0){
            r=Math.sqrt(Q/((Epsilon*4*Math.PI)*E));
            var rs=(Number(r)).toPrecision(4); rs=rs.replace('e','x10^');
            document.getElementById('txtr').value=rs;
        }
       }
    </script>
